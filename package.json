{
    "name": "kyou-no-dekita-monorepo",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "concurrently \"npm run dev:parent\" \"npm run dev:admin\"",
        "dev:parent": "cd parent-app && npm run dev",
        "dev:admin": "cd admin-app && npm run dev -- --port 3001",
        "build:parent": "cd parent-app && npm run build",
        "build:admin": "cd admin-app && npm run build",
        "install:all": "npm install && cd parent-app && npm install && cd ../admin-app && npm install"
    },
    "devDependencies": {
        "@anthropic-ai/claude-code": "^1.0.67",
        "concurrently": "^8.2.2"
    }
}
